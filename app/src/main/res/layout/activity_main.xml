<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCBCF3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_usuario"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="24dp"
        android:text="Traducir Texto"
        android:textColor="#000000"
        android:background="#BCBCF3"
        android:textSize="30dp" />

    <CheckBox
        android:id="@+id/chkSeleccionar"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Seleccionar"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:translationX="275dp"
        android:translationY="250dp" />

    <Button
        android:id="@+id/btnSeleccionar"
        android:layout_width="208dp"
        android:layout_height="72dp"
        android:translationX="100dp"
        android:translationY="175dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="120dp"
        android:layout_marginVertical="240dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="252dp"
        android:fontFamily="sans-serif-light"
        android:onClick="btnCheck"
        android:text="Traducir"
        android:textSize="24dp"
        android:background="@android:color/background_dark"/>

    <EditText
        android:id="@+id/et_usuario"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:translationX="32dp"
        android:translationY="-24dp"
        android:layout_below="@+id/tv_usuario"
        android:layout_marginTop="78dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Insertar Texto"
        android:textSize="20dp"
        android:background="@android:color/background_light"/>

    <EditText
        android:id="@+id/et_usuario2"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_below="@+id/tv_usuario"
        android:layout_marginTop="356dp"
        android:background="@android:color/background_light"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Insertar Texto"
        android:textSize="20dp"
        android:translationX="32dp"
        android:translationY="-96dp" />
</RelativeLayout>